<%- title "分类" -%>

<%
  breadcrumb :list, '分类'
  meta  :description => "文章分类，作者分类" , :keywords => "文章,分类"
%>
<div class="container">
  <div class="class-c clearfix">
    <div class="neirong round2">站内板块 (<%= @classes.length %>)</div>
    <ul class="list-inline">
      <% @classes.each do |c| %>
        <% next if c.classname.strip == '' %>
        <li>
        <%=  link_to  c.classname , category_path(c.classname), :target => '_blank' %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="clearfix">
    <div class="neirong round2">作者(<%= @authores.length %>)</div>
    <ul class="list-inline">
      <% @authores.each do |c| %>
        <% next if c.author.strip == '' %>
        <li>
        <%=  link_to c.author , author_path(c.author), :target => '_blank' %>
        </li>
      <% end %>
    </ul>
  </div>

</div>
