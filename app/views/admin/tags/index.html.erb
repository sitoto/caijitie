<% title "Tags" %>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for tag in @tags %>
    <tr>
      <td><%=h tag.name %></td>
      <td><%= link_to "Show", [:admin ,tag] %></td>
      <td><%= link_to "Edit", edit_admin_tag_path(tag.id) %></td>
      <td><%= link_to "Destroy", [:admin ,tag], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Tag", new_admin_tag_path %></p>
