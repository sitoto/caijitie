<%- title "只看楼主" -%>

<header>

  <div id="search">
      <form action="<%= search_path %>"  method = "get"   target = "_blank">
      <%= text_field_tag(:q , '', :class => "q")  %>
      <%= submit_tag("", :class => "su") %>
      </form>
  </div>
<h1><%=	 link_to 'Lehazi.com', root_path %></h1>
</header>

<section class="home clearfix">
  <div id="nav">
      <div>
        <ul>
          <li id="menu-item-11" class="menu-item current-menu-item">
            <a title="乐哈网" href="http://www.lehazi.com">首页</a></li>
          <li id="menu-item-12" class="menu-item "><a title="乐哈网" href="http://www.lehazi.com/recent">最新</a></li>
          <li id="menu-item-13" class="menu-item "><a title="热门列表" href="http://www.lehazi.com/hot">热门</a></li>
          <li id="menu-item-14" class="menu-item "><a title="分类列表" href="http://www.lehazi.com/class">分类</a></li>
        </ul>
      </div>
    </div>
  <div id="left">
    <h4><%= link_to '最近脱水', recent_path %></h4>
    <%- if @topics -%>
        <ul>
          <% @topics.each do |t| %>
            <li><%=	 link_to t.title, p_pu_path(t, 1), :class => 'border blue' %>
              [<%= link_to  t.classname, category_path(t.classname)  %>]</li>
          <%  end %>
        </ul>
    <%- end -%>
  </div>

<div id="right">
  <div class="area">
     <h4><%= link_to '站内文章', blog_path %></h4>
      <%- if @recent_posts -%>
      <ul>
        <% @recent_posts.each do |t| %>
        <li>
          <%= link_to t.title, t, :target => '_blank', :class => "blue" %>
        </li>
        <%  end %>
        <p class="more"><%= link_to '更多文章 &raquo;'.html_safe, blog_url, :target => '_blank' %></p>
      </ul>
      <%- else -%><p></p><%- end -%>
  </div>
  <div class="area">
     <h4><%= link_to '轻松一刻', blog_path %></h4>
      <%- if @funs -%>
      <ul>
        <% @funs.each do |t| %>
        <li>
          <%= link_to t.title, t, :target => '_blank', :class => "blue" %>
        </li>
        <%  end %>
        <p class="more"><%= link_to '更多文章 &raquo;'.html_safe, funs_url, :target => '_blank' %></p>
      </ul>
      <%- else -%><p></p><%- end -%>

  </div>
  <div class="area">

  </div>
  </div>


</section>

<footer>
    <p class="link">
    <%= link_to (image_tag 'baidutieba.gif',:alt=>"百度贴吧", :class => "round", :width => 89, :height => 30), tb_path, :class => 'nav', :title => '进入百度贴吧脱水版', :target => '_blank' %>
    <%= link_to (image_tag 'tianyabbs.gif',:alt=>"天涯社区", :class => "round", :width => 72, :height => 30), tysq_path, :class => 'nav', :title => '进入天涯社区脱水版', :target => '_blank' %>
    <%= link_to (image_tag 'douban.png',:alt=>"豆瓣话题", :class => "round", :width => 121, :height => 30), dbht_path, :class => 'nav', :title => '进入豆瓣话题脱水版', :target => '_blank' %>
  </p>
  <p class="link">友情链接：
    <%	 @links.each do |f| %>
      <%= link_to f.name, f.url, :target => '_blank', :class => 'border' %>
    <%	 end %>
  <p>Copyright &copy; 2011 <%= link_to '脱水吧 - 中国第一在线采集工具', root_url, :rel => 'home' %></p>
</footer>
