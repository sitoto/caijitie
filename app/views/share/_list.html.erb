<table>
  <thead>
  <tr>
    <th width="40" nowrap=""  style="text-align: center;">序号</th>
    <th>分类</th>
    <th>标题</th>
    <th nowrap="">帖数</th>
    <th width="150">作者</th>
  </tr>
  </thead>
    <tbody>
    <% list.each_with_index do |topic, i| %>
      <tr>
        <td style="text-align: center;"><%=	 (i+1).to_s %></td>
        <td><%= link_to (topic.classname).to_s.truncate(8), "/category/#{topic.classname}",:title => topic.classname, :target => '_blank'  %></td>
        <td><%= link_to (topic.my_title).to_s.truncate(35), "/p/#{topic.id}/pu/1", :target => '_blank' %></td>
        <td><%= topic.mypostnum %> </td>
        <td><%= topic.author %><br>
        <small><%= topic.myupdatetime.to_s(:db) %></small></td>
      </tr>
    <% end %>
    </tbody>
</table>
