<%- title @fun.title -%>
<h2>
  <%= @fun.title %>
</h2>
<p>
  <%= raw  RedCloth.new(@fun.body).to_html %>
</p>
<hgroup>
  <span class="border">
    上一篇：<%	 if @fun_p %>
        <%= link_to @fun_p.title , fun_path(@fun_p.id) %>
